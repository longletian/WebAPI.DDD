{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Async", "Serilog.Sinks.File", "Serilog.Sinks.MongoDB", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      },
      "Grpc": "Information",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            { "Name": "Console" },
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log.txt",
                "rollingInterval": "Day",
                "outputTemplate": "StartTime:{Timestamp:HH:mm:ss.fff} EventLevel:[{Level:u3}] ({Application}/{MachineName}/{ThreadId}) EventInfo:{Message}{NewLine}{Exception}"
              }
            },
            {
              "Name": "MongoDBBson",
              "Args": {
                "databaseUrl": "mongodb://admin:123456@localhost:27017/admin?authSource=admin",
                "collectionName": "logmanage",
                "cappedMaxSizeMb": "1024"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
